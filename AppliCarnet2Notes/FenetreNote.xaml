<Window x:Class="CarnetDeNotes.FenetreNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarnetDeNotes"
        mc:Ignorable="d"
        Title="FentreNote" Height="300" Width="300">
    <Grid>
        <Label Content="Ajouter une note à l'examen" HorizontalAlignment="Left" Margin="76,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Note" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Width="61"/>
        <CheckBox x:Name="CheckAbsense"   Content="Absent(e)" HorizontalAlignment="Left" Margin="124,156,0,0" VerticalAlignment="Top" Height="23" Width="101" />
        <TextBox x:Name="txtValeurNote" Text="{Binding Valeur}" HorizontalAlignment="Left" Height="23" Margin="105,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Valider" Content="Valider" HorizontalAlignment="Left" Margin="105,215,0,0" VerticalAlignment="Top" Width="75" Click="Click_Valider"/>

    </Grid>
</Window>
